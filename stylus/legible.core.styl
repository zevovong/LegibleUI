// Var

$padding = .643em .858em

$whitegray = #E0E0E0

$border = 1px solid $whitegray
$border-radius = 4px

$box-shadow = 0 0 4px 0 rgba(0,0,0,0.61)

// Base Style

body
    font-family: Arial, "Microsoft Yahei", sans-serif;

code
    font-family: Verdana, sans-serif;

input,textarea,pre
    font-family: inherit;

// Common Style

.textbox,
.listview>*,
.code{
    padding: $padding
}

.button,
.textbox,
.code{
    border: $border;
    border-radius: $border-radius;
}

.button,
.textbox {
    box-sizing: border-box;
    outline: 0;
    font-size: 0.875em; // 14px/16px = 
    vertical-align: top;
}

.textbox
    line-height: 1.14em;

// Link

.link{
    color: #0071BC;
    text-decoration: none;
}

.link:hover{
    text-decoration: underline;
}

.link:visited, // visted 只显示color
.link:active{
    color: #4C2C92; 
}

// Button

.button
    display: inline-block;
    padding: .65em 1.3em;
    cursor: pointer;
    background-color: #FFF;
    color: #333;
    text-align: center;
    text-decoration: none;
    -webkit-user-select: none;
    user-select: none;

.button:active {
    box-shadow: 0 0 1000px rgba(0,0,0,.2) inset;
}

.button>*{
    vertical-align: middle; // 让span等元素能垂直居中
//    float: left; //不加float，会有空白
}

// 透明按钮,无样式
.button.transparent {
    border: 0;
    background-color: transparent;
}

.button.blue {
    color: #FFF;
    background-color: #0071bc;
    border-color: #0071bc;
}

.button.red{
    color: #FFF;
    background-color: #cd2026;
    border-color: #cd2026;
}

// List

.list{
    display: table;
    padding: 0;
    border: 0;
    list-style: none;
}

.list li {
    display: table-row;
    line-height: 1.2;
    padding: 0.15em 0;
}

ol.list li{
    counter-increment: ol-li;
}

.list li:before{
    display: table-cell;
    padding-right: .5em;
}

ul.list li:before {
    content: "•";
}

ol.list li:before {
    content: counter(ol-li)".";
}

// List Style

.listview {
    display: inline-block;
    padding: 0;
    background-color: transparent;
    box-sizing: border-box;
}

.listview>* {
    display: block;
    border-top: 1px solid #E0E0E0;
    color: #333;
    text-decoration: none;
}

.listview>*:first-child{
    border: 0;
}

// Table

.table{
    width: 100%;
}

.table tr,
.table th,
.table td{
    border: $whitegray solid;
}

.table tr{
    border-width: 1px 0;
}

.table tr:hover{
    background-color: #F9F9F9;
}

.table th,
.table td{
    padding: $padding;
    text-align: left;
    border-width: 0 1px;
}

.table.divider th,
.table.divider td,
.table.divider tr:first-child,
.table.divider tr:last-child{
    border: 0;
}

// Code Style

.code{
    display: block;
    padding: 1em 2em;
    font-size: 12px;
    line-height: 1.618em; 
    background-color: #F7F7F7;
    overflow: hidden; // 为了选择的样式
}

.code>pre{
    display: inline;
}

// Divider 分割线

.divider{
  border-width: 0 0 1px;
  border-color: #E0E0E0;
}

hr.divider{
    margin: 0;
}

//Text Style

.lowercase{
    text-transform: lowercase;
}

.uppercase{
    text-transform: uppercase;
}

.capitalize{
    text-transform: capitalize;
}

.text-center{
    text-align: center;
}

.text-right{
    text-align: right;
}

.mark {
	padding: 0.125em 0.25em
	font-size: 87.5%
    color: #C50;
	background-color: #FEB
	border-radius: 4px
}

// Layout

.left{
    display: table;
    margin-left: 0;
}

.right{
    display: table;
    margin-left: auto;
}

.center{
    @extend .right
    margin-right: auto;
}

.layout{
    position relative;
    display: block;
    overflow: hidden;
    box-sizing: border-box;
}

.layout>.left{
    float: left;
}

.layout>.right{
    float: right;
}

.layout>.center{
    display: block;
}

.layout.horizontal{
    display: -webkit-flex; // Safari
    display: flex;
}

.layout.vertical{
    @extend .layout.horizontal
    flex-flow: column;
}

.layout.horizontal>.fill,
.layout.vertical>.fill{
    flex: 1;
}

// Box

.cardview {
    display: block;
    margin: 0.5em;
    padding: $padding;
    border-radius: $border-radius;
    background-color: #FFF;
    box-shadow: $box-shadow;
}

.cardview.layout{
    padding: 0;
}

