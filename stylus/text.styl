/**
* Text Style
*/

.lowercase {
    text-transform: lowercase;
}
	
.uppercase {
    text-transform: uppercase;
}

.capitalize {
    text-transform: capitalize;
}

.text-center {
    text-align: center;
}
	
.text-right {
    text-align: right;
}

.mark {
	padding: 0.125em 0.25em;
	font-size: 87.5%;
    color: #C50;
	background-color: #FEB;
	border-radius: 4px;
}